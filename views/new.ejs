<% include partials/header %>

<div class="ui container main segment text">
    <div class="ui header huge">New Blog</div>
    <form action="/blogs" class="ui form" method="POST">
        <div class="field">
            <label>Title</label>
            <input name="blog[title]" placeholder="Title" type="text">
        </div>
        <div class="field">
            <label>Author</label>
            <input name="blog[author]" placeholder="Author" type="text">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input name="blog[image]" placeholder="Image URL" type="text">
        </div>
        <div class="field required">
            <label>Blog Content</label>
            <textarea name="blog[body]" required></textarea>
        </div>
        <input class="ui basic big button violet" type="submit">
    </form>
</div>

<% include partials/footer %>