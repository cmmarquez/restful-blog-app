<% include partials/header %>

<div class="ui container main text">
    <div class="ui header huge">All Blogs</div>
    <div class="ui attached segment top">
        <% blogs.forEach((blog) => { %>
            <div class="ui items">
                <div class="item">
                    <div class="image">
                        <img alt="" src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %> by <%= blog.author %></a>
                        <div class="meta">
                            <span><%= blog.createdDate.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui basic button floated violet" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="chevron icon right" id="chevron"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>